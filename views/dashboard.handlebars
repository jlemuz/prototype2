<main>

  <form method="POST" action="/dashboard" enctype="multipart/form-data" class="login-form">
<div class="content">
  <h2>Upload New Image</h2>
  <div class="input-field"> <input  type="file" name="file" /> </div>
  <div class="input-field"> <input class="input-field" type="text" name="title" placeholder="Image Title"/> </div>
  <div class="input-field"><input class="input-field" type="text" name="description" placeholder="Description"/></div>
  <div>  <input type="submit" class="button-59" value="Upload"/> </div>
      
    </form>
    <br>
</div>


 {{#if posts.length}}
<section>
  <h2>Your Images</h2>
  <ul class="post-list">
  {{#each posts}}
   <li>
    <article class="login-form card">
      <div class="title">
          {{ title }}
      </div>
      <div class="meta">
          <img src="data:image/png;base64,{{image}} " height="200px", length="200px"/>   
      </div>
      <div class="title">
          {{ post_url }}
      </div>

    </article>
  </li>
  {{/each}}
</ul>
</section>
{{/if}}
</section>

<script src="/javascript/add-post.js"></script>